@import "colors/current-theme.css";

window#waybar {
	background-color: rgba(0,0,0,0);
}

window > box {
	background-color: @theme_base_color;
	margin: 6px 8px;
}

* {
	font-family: SpaceMono Nerd Font;
	font-weight: 600;
	font-size: 9px;
	padding: 0;
	border-radius: 6px;
}

.modules-left, .modules-center, .modules-right {
	
}

#custom-launcher,
#workspaces,
#clock,
#bluetooth.connected,
#custom-spotify,
#network,
#network.linked,
#network.ethernet,
#network.wifi,
#custom-powermenu,
box#sys-tray{	
	color: @theme_selected_bg_color;
	margin: 2px;
	background-color: @theme_base_color;
}

#custom-launcher {
	color: @theme_selected_bg_color;
	padding-left: 14px;
}

#workspaces {
	padding: 2px 10px;
}

#workspaces button {
	color: @subtext1;
	padding: 0px 5px
}

#workspaces button.active {
	color: @base;
	background-color: @theme_selected_bg_color;
}

#workspaces button.urgent {
	color: @maroon;
}

#workspaces button:hover {
	color: @theme_selected_bg_color;
	background-color: @base;
}

box#sys-tray {
	padding: 2px 10px 2px 10px;
}

#backlight{
    color: @subtext1;
}
#pulseaudio{
    color: @subtext1;
}
#battery{
    color: @subtext1;
}

.pulseaudio-grp{
	color: @subtext1;
}

#battery.text{
    padding-right: 8px;
}
#backlight.text{

}
#pulseaudio.text{
    padding-right: 8px;
}

#clock {
	padding: 2px 10px;
}

#custom-powermenu {
	padding: 2px 12px 2px 10px;
}

#bluetooth,
#bluetooth.off,
#bluetooth.on {
	color: @subtext1;
	padding: 2px 4px 2px 10px;
	margin: 2px;
	background-color: @theme_base_color;
} 


#network,
#network.disconnected,
#network.disabled {
	color: @subtext1;
	padding: 2px 8px;
}

#custom-spotify {
	background-color: @mantle;
	padding: 2px 10px;
}

#custom-powermenu {
 	color: @theme_selected_bg_color;
	padding-right: 14px;
}

tooltip {
    padding: 25px;
    background-color: @base;
    color: @overlay0;
    font-family: CartographCF Nerd Font;
}

tooltip label {
    padding: 15px;
    color: @foreground;
}

label:focus {
    background-color: @background;
}
