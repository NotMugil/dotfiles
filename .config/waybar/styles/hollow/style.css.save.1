@import url("colors/catppuccin-mocha.css");

#waybar {
    background-color: @crust;
    color: @text;
    font-family: "SpaceMonoNerdFont", "JetBrainsMono Nerd Font",monospace;
    font-size: 11px;
    /* border-bottom: 1px solid @surface0; */
}

/* Space first and last modules evenly */
.modules-right:last-child { margin-right: 5px; }
.modules-left:first-child { margin-left: 5px; }

/* Make all the NF icons bigger */
#battery,
#sys-info,
#custom-notification,
#pulseaudio,
#backlight,
#custom-power-button,
#custom-keyboard,
#custom-pomo-icon
{
    font-size: 9px;
}

/* Active and inactive states */
#network.wifi {
    color: @text;
}
#network.disabled,
#network.disconnected,
#bluetooth.disabled,
#bluetooth.off,
#pulseaudio.muted,
#pulseaudio.source-muted
{
    color: alpha(@subtext0, 0.7);
}


/* Selecting every widget "group" */
#workspaces,
#battery,
box.modules-right > box.horizontal,
#custom-notification,
#sys-info,
#custom-power-button,
#custom-keyboard,
#pomo
{
    background-color: @mantle;
    /* border: red solid 1px; */
    border-radius: 4px;
    margin: 10px 5px;
    padding: 5px 10px;
}
#pomo {
  padding: 0px;

}

#custom-power-button,
#custom-keyboard {
    padding-right: 17px;
    padding-left: 12px;
}

#custom-power-button {
    background-color: alpha(@red, 0.1);
    color: @red;
}

/* Custom pomodoro widget */
#custom-pomo-icon {
  color: @mantle;
  padding-right: 12px;
  padding-left: 10px;
  border-radius: 4px 0px 0px 4px;
}
#custom-pomo-label {
  border-radius: 0px 4px 4px 0px;
}
#custom-pomo-label.running {
  /* background: @red; */
  background-color: alpha(@red, 0.1);
  color: @red;
}
#custom-pomo-label.paused {
  /* background: @blue; */
  background-color: alpha(@blue, 0.1);
  color: @blue;
}
#custom-pomo-label.finished {
  /* background: @green; */
  background-color: alpha(@green, 0.1);
  color: @green;
}
#custom-pomo-icon.running {
  background: @red;
}
#custom-pomo-icon.paused {
  background: @blue;
}
#custom-pomo-icon.finished {
  background: @green;
}
#custom-pomo-label {
  padding: 0px 10px;
}

#custom-notification{
	margin-left: 10px;
}

/* Styling workspace */
#workspaces,
#workspaces button,
#pulseaudio-slider,
#backlight-slider {
    /* border: 1px solid red; */
    all: unset;
}
#workspaces {
    background-color: @mantle;
    margin: 10px 5px;
    border-radius: 4px;
}
#workspaces > button { 
    padding: 0px 15px; 
    font-weight: 900;
    border-radius: 0px;
}
#workspaces > button.empty {
    color: @overlay0;
    /* border: 1px solid red; */
}
#workspaces > button.visible {
    color: @overlay0;
    /* border: 1px solid red; */
}
#workspaces > button.active {
    color: @blue;
    background: alpha(@blue, 0.1);
    /* border-bottom: 1px solid @overlay0; */
}
#workspaces > button:hover { 
    background: alpha(@blue, 0.2);
    color: @text;
}
#workspaces > button:first-child {
    border-radius: 4px 0px 0px 4px;
    padding-left: 20px;
}
#workspaces > button:last-child {
    border-radius: 0px 4px 4px 0px;
    padding-right: 20px;
}


/* Styling tray */
#tray {
    background-color: transparent;
    padding: 0px 0px;
    margin: 0px;
}
#tray .active image {
    /* border: solid 1px red; */
    margin: 0px;
    padding: 0px 5px;
}
/* #tray:first-child {
    background-color: transparent;
    margin-left: 5px;
}
#tray:last-child {
    background-color: transparent;
    margin-right: 5px;
} */

/* Wifi module spaced away from bluetooth*/
#network,
#bluetooth
{
    margin-right: 15px;
}

#bluetooth {
  margin-right: 15px;
}
#network {
  margin-right: 18px;
}

#backlight {
    margin-right: 5px;
    margin-left: 7px;
}
#pulseaudio {
    margin-right: 10px;
}
#pulseaudio.bluetooth {
    color: @blue;
}
/* Styling brightness and volume and slider */
#pulseaudio-slider,
#backlight-slider {
    /* margin-right: 10px; */
    /* border: solid 1px red; */
    border: none;
}
#pulseaudio-slider {
  margin-left: 5px;
  margin-right: 5px;
}
#backlight-slider {
  margin-left: 10px;
}
#pulseaudio-slider slider,
#backlight-slider slider {
    margin-left: -10px;
    min-width: 10px;
    min-height: 10px;
    background: transparent;
    box-shadow: none;
    padding: 0px;

}
#pulseaudio-slider trough,
#backlight-slider trough {
    min-width: 80px;
    border-radius: 5px;
    background-color: @surface0;
}
#pulseaudio-slider highlight,
#backlight-slider highlight {
    border-radius: 5px;
    min-height: 8px;
}

/* Styling the clock */
#clock.date {
    font-weight: normal;
    margin-left: 14px;
}
#clock.time {
    padding: 0px;
    margin-left: 12px;
    font-weight: 500;
}

/* Styling tooltips */
tooltip {
    padding: 15px;
    background-color: @base;
    color: @overlay0;
    font-family: Space Mono Nerd Font;
    font-size: 12px;
}

tooltip label {
    padding: 10px;
    color: @foreground;
}

label:focus {
    background-color: @background;
}
