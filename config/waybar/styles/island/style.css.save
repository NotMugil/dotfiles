@import "colors/catppuccin-mocha.css";

window#waybar {
	background-color: rgba(0,0,0,0);
}

window > box {
	background-color: @mantle;
	margin: 6px 8px;
}

* {
	font-family: SpaceMono Nerd Font;
	font-weight: 600;
	font-size: 9px;
	padding: 0;
	border-radius: 6px;
}

.modules-left, .modules-center, .modules-right {
	
}

#custom-launcher,
#workspaces,
#clock,
#bluetooth,
#custom-spotify,
#network,
#custom-powermenu,
box#sys-tray{	
	margin: 2px;
	background-color: @mantle;
	/* box-shadow: 2px 3px @base; */
	/* border: 1px solid @overlay0; */
}

#custom-launcher {
	color: @blue;
	padding-left: 14px;
}

#workspaces {
	padding: 2px 10px;
}

#workspaces button {
	padding: 0px 5px
}

#workspaces button.active {
	color: @base;
	background-color: @blue;
}

#workspaces button.urgent {
	color: @maroon;
}

#workspaces button:hover {
	color: @blue;
	background-color: @base;
}

box#sys-tray {
	padding: 2px 10px 2px 10px;
}

#backlight{
    color: @blue;
}
#pulseaudio{
    color: @lavender;
}
#battery{
    color: @overlay2;
}

#battery.text{
    padding-right: 8px;
}
#backlight.text{

}
#pulseaudio.text{
    padding-right: 8px;
}

#clock {
	padding: 2px 10px;
}

#custom-powermenu {
	padding: 2px 12px 2px 10px;
}

#custom-dot,
#custom-right-arrw{
	color: @mantle;
}

#bluetooth {
	padding: 2px 4px 2px 10px;
} 

#network {
	padding: 2px 8px;
}

#custom-spotify {
	background-color: @mantle;
	padding: 2px 10px;
}

#custom-powermenu {
	padding-right: 14px;
}

tooltip {
    padding: 25px;
    background-color: @base;
    color: @overlay0;
    font-family: CartographCF Nerd Font;
}

tooltip label {
    padding: 15px;
    color: @foreground;
}

label:focus {
    background-color: @background;
}q
